
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to the debate state for students/viewers
    match /debateState/{state} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated (admin/moderator) can write
    }

    // Allow anyone to register a school
    match /schools/{schoolId} {
      allow create: if true;
      // Only authenticated users (admins) can read/update/delete
      allow read, update, delete: if request.auth != null;
    }
    
    match /schools/{schoolId}/{document=**} {
       allow read, write: if request.auth != null;
    }

    // Allow authenticated users to manage judges
    match /judges/{judgeId} {
      allow read, write: if request.auth != null;
    }
    
    // Rules for scores
    match /scores/{scoreId} {
      // Allow anyone to submit a score (judges are not authenticated for now)
      // In a real-world app, this should be restricted to authenticated judges.
      allow create: if true;
      
      // Only authenticated users (admins) can read all scores
      allow read, list: if request.auth != null;
    }
  }
}
